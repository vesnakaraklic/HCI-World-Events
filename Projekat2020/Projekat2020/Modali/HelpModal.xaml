<Window x:Class="Projekat2020.Modali.HelpModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat2020.Modali"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="Help" Height="50" Width="150" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <SolidColorBrush Color="White"/>
    </Window.Background>
    <Border  BorderBrush="{StaticResource clrBlue}" BorderThickness="1" CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="PrvoPoljeHelp" Grid.Row="0" FontSize="10" x:FieldModifier="public" />
            <TextBlock x:Name="DrugoPoljeHelp" FontSize="10" Grid.Row="1" x:FieldModifier="public"/>
            <TextBlock x:Name="TrecePoljeHelp" FontSize="10" Grid.Row="2" x:FieldModifier="public"/>
            <TextBlock x:Name="CetvrtoPoljeHelp" FontSize="10"  Foreground="#ad0722" Grid.Row="3" x:FieldModifier="public"/>
        </Grid>
    </Border>
</Window>
